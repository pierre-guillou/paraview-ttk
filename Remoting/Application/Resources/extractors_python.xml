<ServerManagerConfiguration>
  <ProxyGroup name="extract_triggers">
    <ExtractTriggerProxy name="Python">
      <Documentation>
        Extract trigger that uses a Python script to determine if the trigger
        is activated.
      </Documentation>
      <StringVectorProperty name="Script"
        number_of_elements="1"
        default_values="def is_activated(controller): return True">
        <Hints>
          <Widget type="multi_line" syntax="python" />
        </Hints>
      </StringVectorProperty>
    </ExtractTriggerProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
